<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project.nuerp.Activity.home">
    <android.support.v7.widget.CardView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="15dp"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@color/back"
            android:text="Welcome to NU ERP"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
    </android.support.v7.widget.CardView>


<RelativeLayout
    android:layout_marginTop="20dp"
    android:layout_below="@id/head"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        >
        <EditText
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Email"
            android:singleLine="true"
            android:background="@drawable/edittext_selected"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/pass_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/edittext_selected"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:hint="Password"
            android:inputType="textPassword" />

    </LinearLayout>


    <Button
        android:id="@+id/login"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/log"
        android:background="@drawable/custom_button3"
        android:padding="20dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20dp" />
</RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/back">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:layout_above="@id/adminBtn"
                android:text="For admin"
                android:textSize="20sp"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/adminBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Login"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:textSize="17dp"
                android:background="@drawable/custom_button2"
                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>
